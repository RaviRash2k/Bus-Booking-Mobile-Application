<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_items_background"
    android:layout_marginBottom="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="3dp"
        android:background="@drawable/menu_items_background"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/busRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Galle - Colombo"
                android:textColor="@color/dark_text"
                android:textSize="23sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/bus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sp BUS 1234"
            android:textSize="17dp"
            android:textAlignment="center"
            android:textColor="@color/dark_text"
            android:layout_marginBottom="19dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginBottom="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textSize="17dp"
                android:textColor="@color/dark_text"/>
            <TextView
                android:id="@+id/timeTableDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="15.08.2024"
                android:textSize="17dp"
                android:textColor="@color/dark_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start time:"
                android:textSize="17dp"
                android:textColor="@color/dark_text"/>
            <TextView
                android:id="@+id/timeTableStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="05 : 30 AM"
                android:textSize="17dp"
                android:textColor="@color/dark_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End time:"
                android:textSize="17dp"
                android:textColor="@color/dark_text"/>
            <TextView
                android:id="@+id/timeTableEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="09 : 30 AM"
                android:textSize="17dp"
                android:textColor="@color/dark_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket price:"
                android:textSize="17dp"
                android:textColor="@color/dark_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="LKR"
                android:textSize="17dp"
                android:textColor="@color/dark_text"/>
            <TextView
                android:id="@+id/ticketPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="1000"
                android:textSize="17dp"
                android:textColor="@color/dark_text"/>

        </LinearLayout>

        <Button
            android:id="@+id/deleteTimeSlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="delete"
            android:textColor="@color/text"
            android:layout_marginTop="10dp"
            android:backgroundTint="#701723"/>

    </LinearLayout>
</LinearLayout>