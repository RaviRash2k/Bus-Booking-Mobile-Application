<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_bckground"
    tools:context=".users.routeManager.routeManagerFragment.RouteManagerHome.ViewTicket.ViewTickets">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="120dp"
        android:paddingBottom="30dp"
        android:background="@color/main">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/menu_items_background">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/iconsearch"/>
            <EditText
                android:id="@+id/enterTicket"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="text"
                android:layout_weight="1"
                android:hint="Enter Ticket ID"
                android:textColorHint="@color/hint_text"
                android:background="@color/transparent"
                android:textColor="@color/dark_text"/>
            <Button
                android:id="@+id/viewTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/main"
                android:textColor="@color/text"
                android:text="View"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:background="@drawable/menu_items_background"
        android:padding="20dp">
        <TextView
            android:id="@+id/busRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Galle - Colombo"
            android:textColor="@color/dark_text"
            android:textSize="23sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/bus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sp BUS 1234"
            android:textSize="17dp"
            android:textAlignment="center"
            android:textColor="@color/dark_text"
            android:layout_marginBottom="19dp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15.08.2024"
            android:textSize="17dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/dark_text"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15.08.2024"
            android:textSize="17dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/dark_text"/>

        <TextView
            android:id="@+id/nic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15.08.2024"
            android:textSize="17dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/dark_text"/>

        <TextView
            android:id="@+id/seats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15.08.2024"
            android:textSize="17dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/dark_text"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15.08.2024"
            android:textSize="17dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/dark_text"/>

        <Button
            android:id="@+id/deleteTimeSlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="done"
            android:textColor="@color/text"
            android:layout_marginTop="10dp"
            android:backgroundTint="#35742E"/>

    </LinearLayout>

    <TextView
        android:id="@+id/noTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="No Ticket Founded"
        android:textColor="@color/dark_text"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

    </LinearLayout>