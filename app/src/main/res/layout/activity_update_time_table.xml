<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/my_bckground"
    tools:context=".users.routeManager.routeManagerFragment.TimeTableManage.UpdateTimeTable">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="70dp"
        android:paddingBottom="15dp"
        android:background="@color/main">
        <TextView
            android:id="@+id/viewTimeTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time table"
            android:layout_weight="1"
            android:textColor="@color/text"
            android:textSize="17sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/addTimeTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add time table"
            android:layout_weight="1"
            android:textColor="@color/text"
            android:textSize="13sp"
            android:textAlignment="center"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frmTimeTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>